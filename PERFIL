class SkillChip extends StatelessWidget {
  final String label;
  SkillChip({required this.label});

  @override
  Widget build(BuildContext context) {
    return Chip(
      label: Text(label, style: TextStyle(color: Colors.white),
      ),
      backgroundColor: Colors.grey[700],

    );
  }
}
